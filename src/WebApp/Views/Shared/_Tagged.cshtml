@using WebApp.Data
@model WebApp.Models.PostModel
<span class="post-date">
    date @Model.Published.ToString("yyyy-MM-dd"), tags:
    @for (int i = 0; i < Model.Tags.Length; i++)
    {
        var tag = Model.Tags[i];
        @Html.ActionLink(tag, "Index", "Tags", new {name = tag.ToLowerInvariant() })@(i < Model.Tags.Length - 1 ? ", " : "")
    }
</span>