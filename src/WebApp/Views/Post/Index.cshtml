@model WebApp.Models.PostModel
<div class="post">
    <h1 class="post-title"><a href="@Model.Url">@Model.Title</a></h1>
    @Html.Raw(Model.Text)
    @await Html.PartialAsync("_Tagged", Model)
</div>

@section Head {
    <title>@Model.Title - itovsbasement.net</title>
    <meta name="description" content="@Model.Summary">
    <meta property="og:type" content="website">
    <meta property="og:title" content="@Model.Title - itovsbasement.net">
    <meta property="og:description" content="@Model.Summary">
    <meta property="og:url" content="@Context.GetAbsoluteUrl(Model.Url)">
    <meta property="og:image" content="@Context.GetAbsoluteUrl("/content/images/og-image.jpg")">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:type" content="image/jpeg">
}